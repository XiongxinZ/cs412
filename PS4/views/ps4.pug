extends layout

block content
    .title Summarize the data retrieved from Coronavirus API with a given country or region
    .container
        table.table
            thread
            tr
                th country
                th total_cases
                th tested
                th death_ratio
                th recovery_ratio
        tbody
            thread
            tr
                th #{country}
                th #{total_cases}
                th #{tested}
                th #{death_ratio}
                th #{recovery_ratio}

